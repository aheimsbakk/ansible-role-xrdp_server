#
# Turn off desktop animations for speed
#

[org/gnome/desktop/interface]
enable-animations = false

#
# Make fonts more visible
#

[org/gnome/settings-daemon/plugins/xsettings]
hinting = 'medium'
antialiasing = 'grayscale'

#
# Background
#

#[org/gnome/desktop/background]
#picture-uri = 'file:///usr/share/backgrounds/gnome/Symbolics-2.jpg'

#
# Turn off prompt for color profile
#

[org/gnome/settings-daemon/plugins/color]
active = false

#
# Turn off software updates through Gnome, using unattended-upgrades
#

[org/gnome/software]
allow-updates = false
download-updates = false
download-updates-notify = false
install-bundles-system-wide = false

#
# Lock down the desktop a bit
#

[org/gnome/desktop/lockdown]
disable-lock-screen = true
disable-user-switching = true
user-administration-disabled = true

